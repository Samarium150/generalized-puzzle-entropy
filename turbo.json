{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "pre-dev": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^pre-dev"],
      "cache": false,
      "persistent": true
    }
  }
}
