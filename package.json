{
  "name": "thesis",
  "license": "GPL-3.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.3.1",
    "turbo": "^2.0.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.3.0",
  "private": true,
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "typescript"
      ]
    },
    "updateConfig": {
      "ignoreDependencies": [
        "long",
        "bytebuffer",
        "protobufjs"
      ]
    }
  }
}
